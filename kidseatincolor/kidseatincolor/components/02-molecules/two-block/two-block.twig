{#
 # Available variables:
 # - twoblocksection_base_class - base classname of the wrapper.
 # - twoblocksection_modifiers - array of modifiers to add to the base classname of the wrapper.
 # - twoblocksection_blockname - blockname prepended to the base classname of the wrapper(s) and each component.
 #
 # - twoblocksection_image__src - the actual image file location.
 # - twoblocksection_image__alt - (optional) the alt text for screen readers and when the image cannot load.
 # - twoblocksection_image__output_image_tag - whether to print the picture element or not.
 # - twoblocksection_image__class - 
 #
 # - twoblocksection_content__base_class - base classname of the copy wrapper - defaults to 'heading'.
 # - twoblocksection_content__modifiers - array of modifiers to add to the base classname of the copy wrapper.
 # - twoblocksection_content__blockname - blockname prepended to the base classname of the copy wrapper.
 #
 # - twoblocksection_heading - the content of the title component.
 # - twoblocksection_heading__link - (optional) the url the title should link to. Defaults to twoblocksection_link__url.
 # - twoblocksection_heading__base_class - base classname of the title component. Defaults to "title".
 # - twoblocksection_heading__blockname - blockname to add to the base classname of the title - defaults to twoblocksection_base_class.
 # - twoblocksection_heading__modifiers - array of modifiers to add to the base classname of the title.
 # - twoblocksection_heading__link_base_class - base class to add to the title link - defaults to 'title-link'.
 #
 # - twoblocksection_subheading - the content of the subtitle component.
 # - twoblocksection_subheading__link - (optional) the url the subtitle should link to.
 # - twoblocksection_subheading__base_class - base classname of the subtitle component. Defaults to "subtitle".
 # - twoblocksection_subheading__modifiers - array of modifiers to add to the base classname of the subtitle.
 #
 # - twoblocksection_body - the content of the body component.
 # - twoblocksection_body__base_class - base classname of the body component. Defaults to "body".
 # - twoblocksection_body__modifiers - array of modifiers to add to the base classname of the body.
 #
 # - twoblocksection_link__text - the content of the link component.
 # - twoblocksection_link__url - the url the link should link to.
 # - twoblocksection_link__base_class - base classname of the link component. Defaults to "link".
 # - twoblocksection_link__blockname - override link blockname. Defaults to twoblocksection_base_class.
 # - twoblocksection_link__attributes - array of attribute,value pairs for the link attribute.
 # - twoblocksection_link__modifiers - array of modifiers to add to the base classname of the link.
 #
 # - twoblocksection_button__content - the content of the button component.
 # - twoblocksection_button__url - the url the button should link to.
 # - twoblocksection_button__base_class - base classname of the button component. Defaults to "button".
 # - twoblocksection_button__attributes - array of attribute,value pairs for the button attribute.
 # - twoblocksection_button__modifiers - array of modifiers to add to the base classname of the button.
 #}
{% set twoblocksection__base_class = 'two-block-section' %}
{% set playIcon = theme ? theme.link ~  '/images/play-buttonv.png' : 'play-buttonv.png' %}

<div {{ bem(twoblocksection__base_class, twoblocksection_modifiers, twoblocksection_blockname, twoblocksection_extra_classes) }}>
  
  {# Image #}
  {% block twoblocksection_video %}
  <div class="col-md-6 col-lg-8">
    <div class="relative aos-init aos-animate" data-aos="fade-left">
    
     {% if video_content_raw %}
      {% include "@atoms/video/video.twig" with {
        video_content: video_content_raw
      } %}
      {# {% include "@atoms/images/image/responsive-image.twig" with {
        image_blockname: twoblocksection__base_class,
        output_image_tag: twoblocksection_image__output_image_tag,
        image_src: twoblocksection_image__src,
        image_alt: twoblocksection_image__alt,
        picture_base_class: twoblocksection_image__class,
      } %} #}
      {# {% include "@atoms/links/link/link.twig" with {
        link_base_class: twoblocksection_link__base_class|default('playBtn'),
        link_blockname: twoblocksection_base_class,
        link_attributes: twoblocksection_link__attributes,
        link_content: twoblocksection_link__text,
        link_url: twoblocksection_link__url,
        } %} #}
        {# {% if twoblocksection_videoThembimage__url %}
        <a data-fancybox="" href="{{twoblocksection_videoThembimage__url}}" class="playBtn">
          <img src="{{playIcon}}" alt="">
        </a>
        {% endif %} #}
        
        {% endif %}
        {% if twoblocksection_image__src %}
          {% include "@atoms/images/image/responsive-image.twig" with {
            image_blockname: twoblocksection__base_class,
            output_image_tag: twoblocksection_image__output_image_tag,
            image_src: twoblocksection_image__src,
            image_alt: twoblocksection_image__alt,
            picture_base_class: twoblocksection_image__class,
          } %}
        {% endif %}
			</div>
    </div>
    {% endblock %}
    
  {# Content #}
  <div {{ bem('col-md-6 col-lg-4')}}>
    <div {{ bem('content', twoblocksection_content__modifiers, twoblocksection_base_class) }}>
      {# Heading #}
      {% if twoblocksection_heading %}
        {% include "@atoms/text/headings/_heading.twig" with {
          heading_base_class: twoblocksection_heading__base_class|default('heading'),
          heading_modifiers: twoblocksection_heading__modifiers,
          heading_blockname: twoblocksection_base_class,
          heading_level: 2,
          heading: twoblocksection_heading,
          heading_url: twoblocksection_heading__link|default(twoblocksection_link__url),
          heading_link_base_class: twoblocksection_heading__link_base_class|default('heading-link'),
          heading_link_blockname: twoblocksection_base_class,
        } %}
      {% endif %}
      {# Subheading #}
      {% if twoblocksection_subheading %}
        {% include "@atoms/text/headings/_heading.twig" with {
          heading_base_class: twoblocksection_subheading__base_class|default('subheading'),
          heading_modifiers: twoblocksection_subheading__modifiers,
          heading_blockname: twoblocksection_base_class,
          heading_level: 3,
          heading: twoblocksection_subheading,
          heading_url: twoblocksection_subheading__link,
        } %}
      {% endif %}
      {# Body #}
      {% if twoblocksection_body %}
        {% include "@atoms/text/text/01-paragraph.twig" with {
          paragraph_base_class: twoblocksection_body__base_class|default('body'),
          paragraph_modifiers: twoblocksection_body__modifiers,
          paragraph_blockname: twoblocksection_base_class,
          paragraph_content: twoblocksection_body,
        } %}
      {% endif %}
      {# Link #}
      {% if twoblocksection_link__url %}
        {% include "@atoms/links/link/link.twig" with {
          link_base_class: twoblocksection_link__base_class|default('link'),
          link_blockname: twoblocksection_base_class,
          link_attributes: twoblocksection_link__attributes,
          link_content: twoblocksection_link__text,
          link_url: twoblocksection_link__url,
        } %}
      {% endif %}
      {# Button #}
      {% if twoblocksection_button__url %}
        {% include "@atoms/buttons/twig/button.twig" with {
          button_base_class: twoblocksection_button__base_class|default('button'),
          button_modifiers: twoblocksection_button__modifiers,
          button_blockname: twoblocksection_base_class,
          button_attributes: twoblocksection_button__attributes,
          button_content: twoblocksection_button__content,
          button_url: twoblocksection_button__url,
        } %}
      {% endif %}
    </div>
  </div>
</div>
